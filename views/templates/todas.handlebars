<div class="todas">
  <h1 id="tt-principal">Suas simulações</h1>
  <ul class="simulacao-lista">
    {{#if nenhumaSimulacao}}
      <p>Não há simulações feitas</p>
    {{/if}}
    {{#each simulacao}}
      <li>
        <a
          href="/simulacao/editar/{{this.id}}"
          class="todas-titulo"
        >{{this.titulo}}</a>
        <span class="actions">
          <a href="/simulacao/editar/{{this.id}}"><i
              class="bi bi-pencil-square"
            ></i></a>
          <form action="/simulacao/remover" method="POST">
            <input type="hidden" name="id" value={{this.id}} />
            <button type="submit">
              <i class="bi bi-x-lg"></i>
            </button>
          </form>
        </span>
      </li>
    {{/each}}
  </ul>
</div>